		YL9,
		YL10,
		YL11,	
		YL12,	
		YL13,	
		YL14,
		YL15,
		YL16,
		YL17,
		YL18,
		YL19,
		YL20,	
		RECEPTION_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{ORDER_ID},	
		#{CREATE_BY},	
		#{CREATE_TIME},	
		#{CHECKED_BY},	
		#{CHECKED_TIME},	
		#{SERVICE_ADVISOR},	
		#{MILEAGE},	
		#{STATUS},	
